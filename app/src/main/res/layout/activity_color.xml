<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityColor">

    <ImageView
        android:id="@+id/imgYellow"
        android:layout_width="90dp"
        android:layout_height="84dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/amarillo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="57dp"
        android:layout_height="54dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="20dp"
        android:text="+"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/txtColor1"
        app:layout_constraintEnd_toStartOf="@+id/imgYellow"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgRed" />

    <EditText
        android:id="@+id/txtColor1"
        android:layout_width="154dp"
        android:layout_height="36dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="129dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgBlue"
        android:layout_width="90dp"
        android:layout_height="84dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="72dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgRed"
        app:srcCompat="@color/azul" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="57dp"
        android:layout_height="54dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="16dp"
        android:text="+"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/txtColor2"
        app:layout_constraintEnd_toStartOf="@+id/imgGreen"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgBlue" />

    <ImageView
        android:id="@+id/imgGreen"
        android:layout_width="90dp"
        android:layout_height="84dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgYellow"
        app:srcCompat="@color/verde" />

    <EditText
        android:id="@+id/txtColor2"
        android:layout_width="154dp"
        android:layout_height="36dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="129dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtColor1" />

    <ImageView
        android:id="@+id/imgRed5"
        android:layout_width="90dp"
        android:layout_height="84dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="76dp"
        android:adjustViewBounds="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBlue"
        app:srcCompat="@color/blanco" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="57dp"
        android:layout_height="54dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="20dp"
        android:text="+"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/txtColor3"
        app:layout_constraintEnd_toStartOf="@+id/imgRed6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgRed5" />

    <ImageView
        android:id="@+id/imgRed6"
        android:layout_width="90dp"
        android:layout_height="84dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgGreen"
        app:srcCompat="@color/negro" />

    <EditText
        android:id="@+id/txtColor3"
        android:layout_width="154dp"
        android:layout_height="36dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="129dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtColor2" />

    <Button
        android:id="@+id/btnRespond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="162dp"
        android:layout_marginTop="536dp"
        android:layout_marginEnd="161dp"
        android:text="Comprobar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgRed"
        android:layout_width="90dp"
        android:layout_height="84dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/rojo" />

</androidx.constraintlayout.widget.ConstraintLayout>